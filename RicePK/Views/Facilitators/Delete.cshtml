@model RicePK.Models.tblFacilitator

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <div class="row" style="margin-top:20px;">
        <div class="col-sm">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-sm-6">
                            @Html.ActionLink("Back", "Index", "Facilitators", new { @class = "btn btn-danger" })

                        </div>
                        <div class="col-sm-6">
                            <div><h3 class="m-0 font-weight-bold text-primary">Are you sure you want to delete this?</h3></div>

                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <div>

                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.FacilitatorName)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.FacilitatorName)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.ContactNumber)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.ContactNumber)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Address)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Address)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Type)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Type)
                            </dd>

                        </dl>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="submit" value="Delete" class="btn btn-primary" /> 
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
                
                
