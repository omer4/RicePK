@model RicePK.Models.tblUser

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-sm-6">
                            @Html.ActionLink("Back", "Index", "User", new { @class = "btn btn-danger" })

                        </div>
                        <div class="col-sm-6">
                            <div><h3 class="m-0 font-weight-bold text-primary">Are you sure you want to delete this?</h3></div>
                         

                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div>

                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.UserName)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.UserName)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.UserPassword)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.UserPassword)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.UserType)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.UserType)
                            </dd>

                        </dl>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-primary" />
                        @Html.ActionLink("Back", "Index", "User", new { @class = "btn btn-danger" })

                    </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



