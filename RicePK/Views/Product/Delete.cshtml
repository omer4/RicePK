@model RicePK.Models.tblProduct

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm">
            <dov class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-sm-6">
                            @Html.ActionLink("Back", "Index", "Product", new { @class = "btn btn-danger" })

                        </div>
                        <div class="col-sm-6">
                            <div><h3 class="m-0 font-weight-bold text-primary">Are you sure you want to delete this?</h3></div>

                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div>
                        
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                <label>Product Name</label>
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.ProductName)
                            </dd>

                            <dt>
                                <label>Product Category</label>
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.ProductCategoryId)
                            </dd>

                        </dl>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="submit" value="Delete" class="btn btn-primary" /> 
                                @Html.ActionLink("Back", "Index","Product",new {@class="btn btn-danger" })
                            </div>
                        }
                    </div>
                </div>
            </dov>
        </div>
    </div>
</div>


